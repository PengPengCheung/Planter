<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_margin_bottom_large"
        android:textSize="@dimen/sn_16sp"
        android:textColor="@color/colorBlack"
        android:text="请填写考勤码"/>

    <EditText
        android:id="@+id/ed_attendance_code_input"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:hint="请输入6位考勤码"
        android:textSize="@dimen/sn_16sp"
        android:inputType="number"
        android:maxLength="6"
        android:gravity="center"
        android:background="@drawable/shape_course_summary_input"
        android:layout_marginBottom="@dimen/item_margin_bottom_large"
        android:textColorHint="@color/colorGrey"
        android:textColor="@color/colorGrey"/>

    <Button
        android:id="@+id/btn_dialog_positive"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@color/colorGreen"
        android:text="提交" />

</LinearLayout>