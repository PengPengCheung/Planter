<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorGreen"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/planter_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planter"
            android:layout_marginTop="@dimen/item_margin_top"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"/>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/item_margin_top_large"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_vertical"
            android:text="姓名" />

        <EditText
            android:id="@+id/edit_launch_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:background="@drawable/shape_edittext"
            android:padding="3dp"
            android:layout_marginLeft="@dimen/item_margin_left_large" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_top"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="学号" />

        <EditText
            android:id="@+id/edit_launch_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:background="@drawable/shape_edittext"
            android:padding="3dp"
            android:inputType="number"
            android:layout_marginLeft="@dimen/item_margin_left_large" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/item_margin_top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="密码" />

        <EditText
            android:id="@+id/edit_launch_password"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:background="@drawable/shape_edittext"
            android:padding="3dp"
            android:inputType="numberPassword"
            android:layout_marginLeft="@dimen/item_margin_left_large" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/item_margin_top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="课程码" />

        <EditText
            android:id="@+id/edit_launch_course_code"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:background="@drawable/shape_edittext"
            android:padding="3dp"
            android:inputType="number"
            android:layout_marginLeft="4dp" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_launch_sign_up"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="立即成为Planter"
        android:layout_marginTop="@dimen/item_margin_top_large"
        android:background="@drawable/shape_button_green"/>

</LinearLayout>