<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_focus_waiting"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/focus_waiting"/>

        <TextView
            android:id="@+id/tv_focus_time_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:layout_marginTop="@dimen/item_margin_top_large"
            android:textSize="30sp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="32sp"
            android:layout_marginTop="@dimen/item_margin_top"
            android:text="不要开小差哦"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/item_margin_top_large">

            <EditText
                android:id="@+id/edit_attention_score"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:hint="评个分吧"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGrey"
                android:textAlignment="center"
                android:background="@drawable/shape_edittext"/>

            <ImageView
                android:layout_width="@dimen/img_width_30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/item_margin_left"
                android:src="@drawable/focus_pen_score"/>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>